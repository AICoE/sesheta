{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "patch-bot"
    },
    "spec": {
        "parallelism": 1,
        "completions": 1,
        "template": {
            "metadata": {
                "name": "patch-bot"
            },
            "spec": {
                "containers": [{
                    "name": "patch-bot",
                    "image": "172.30.16.196:5000/manageiq-bot/patch-bot",
                    "env": [{
                            "name": "APP_FILE",
                            "value": "patch_bot.py"
                        },
                        {
                            "name": "GEMNASIUM_API_KEY",
                            "valueFrom": {
                                "secretKeyRef": {
                                    "name": "manageiq-bot",
                                    "key": "GEMNASIUM_API_KEY"
                                }
                            }
                        }
                    ]
                }],
                "restartPolicy": "OnFailure"
            }
        }
    }
}